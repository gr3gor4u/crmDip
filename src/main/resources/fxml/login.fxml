<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javacrm.controller.LoginController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Вход в систему" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <VBox spacing="15" maxWidth="400" styleClass="login-form">
        <Label text="Имя пользователя:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="usernameField" promptText="Введите имя пользователя"/>
        
        <Label text="Пароль:" style="-fx-font-size: 14px;"/>
        <PasswordField fx:id="passwordField" promptText="Введите пароль"/>
        
        <HBox spacing="10" alignment="CENTER">
            <Button text="Войти" onAction="#handleLogin" defaultButton="true" style="-fx-min-width: 120px;"/>
            <Button text="Регистрация" onAction="#handleRegister" style="-fx-min-width: 120px;"/>
        </HBox>
    </VBox>
</VBox> 