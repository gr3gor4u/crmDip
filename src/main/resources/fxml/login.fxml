<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" styleClass="login-container" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.LoginController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Вход в систему" styleClass="login-title"/>
    
    <TextField fx:id="usernameField" promptText="Имя пользователя" styleClass="login-field"/>
    <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="login-field"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Войти" onAction="#handleLogin" styleClass="login-button"/>
        <Button fx:id="registerButton" text="Регистрация" onAction="#handleRegister" styleClass="secondary-button"/>
    </HBox>
</VBox> 