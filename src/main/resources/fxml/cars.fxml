<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javacrm.controller.CarsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Управление автомобилями"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addCarButton" onAction="#handleAddCar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Добавить автомобиль"/>
    </HBox>

    <TableView fx:id="carsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="modelColumn" text="Модель"/>
            <TableColumn fx:id="brandColumn" text="Марка"/>
            <TableColumn fx:id="yearColumn" text="Год"/>
            <TableColumn fx:id="priceColumn" text="Цена"/>
            <TableColumn fx:id="statusColumn" text="Статус"/>
            <TableColumn fx:id="actionsColumn" text="Действия"/>
        </columns>
    </TableView>

    <Dialog fx:id="carDialog" title="Добавить автомобиль">
        <dialogPane>
            <DialogPane>
                <content>
                    <GridPane hgap="10" vgap="10">
                        <Label text="Модель:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Марка:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="brandField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Год:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Цена:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </GridPane>
                </content>
                <buttonTypes>
                    <ButtonType fx:constant="OK"/>
                    <ButtonType fx:constant="CANCEL"/>
                </buttonTypes>
            </DialogPane>
        </dialogPane>
    </Dialog>
</VBox> 