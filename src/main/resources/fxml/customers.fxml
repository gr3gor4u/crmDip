<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.CustomersController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Управление клиентами" style="-fx-font-size: 20px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Добавить клиента" onAction="#handleAddCustomer"/>
    </HBox>

    <GridPane hgap="10" vgap="5">
        <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="lastNameFilterField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Имя:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="firstNameFilterField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <Label text="Отчество:" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
        <TextField fx:id="middleNameFilterField" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailFilterField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Паспорт:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="passportFilterField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Label text="Телефон:" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <TextField fx:id="phoneFilterField" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
        
        <Button text="Поиск" onAction="#handleSearch" GridPane.columnIndex="6" GridPane.rowIndex="1"/>
        <Button text="Очистить" onAction="#handleClearSearch" GridPane.columnIndex="7" GridPane.rowIndex="1"/>
    </GridPane>

    <TableView fx:id="customersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="lastNameColumn" text="Фамилия"/>
            <TableColumn fx:id="firstNameColumn" text="Имя"/>
            <TableColumn fx:id="middleNameColumn" text="Отчество"/>
            <TableColumn fx:id="maritalStatusColumn" text="Семейное положение"/>
            <TableColumn fx:id="childrenCountColumn" text="Количество детей"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="phoneColumn" text="Телефон"/>
            <TableColumn fx:id="passportColumn" text="Паспорт"/>
            <TableColumn fx:id="registrationDateColumn" text="Дата регистрации"/>
            <TableColumn fx:id="actionsColumn" text="Действия"/>
        </columns>
    </TableView>
</VBox> 