<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javacrm.controller.InsuranceController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane vgap="10" hgap="10">
        <Label text="Поиск по номеру:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="numberSearchField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Поиск по VIN:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="vinSearchField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Поиск по клиенту:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="customerSearchField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Тип страховки:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="typeFilterComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="statusFilterComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <Button text="Поиск" onAction="#handleSearch"/>
            <Button text="Сбросить" onAction="#handleReset"/>
        </HBox>
    </GridPane>

    <TableView fx:id="insurancesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="numberColumn" text="Номер" prefWidth="100"/>
            <TableColumn fx:id="customerColumn" text="Клиент" prefWidth="150"/>
            <TableColumn fx:id="carColumn" text="Автомобиль" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Тип" prefWidth="100"/>
            <TableColumn fx:id="startDateColumn" text="Дата начала" prefWidth="100"/>
            <TableColumn fx:id="expiryDateColumn" text="Дата окончания" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Добавить" onAction="#handleAddInsurance"/>
        <Button text="Редактировать" onAction="#handleEditInsurance"/>
        <Button text="Удалить" onAction="#handleDeleteInsurance"/>
    </HBox>
</VBox> 