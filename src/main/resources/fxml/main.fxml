<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javacrm.controller.MainController">
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="CarsStore" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userLabel" text="Пользователь: "/>
            <Button text="Выйти" onAction="#handleLogout"/>
        </HBox>
    </top>
    
    <left>
        <VBox styleClass="sidebar" spacing="5">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Button text="Дашборд" styleClass="sidebar-button" onAction="#showDashboard" fx:id="dashboardButton"/>
            <Button text="Автомобили" styleClass="sidebar-button" onAction="#handleCars" fx:id="carsButton"/>
            <Button text="Клиенты" styleClass="sidebar-button" onAction="#handleCustomers" fx:id="customersButton"/>
            <Button text="Сделки" styleClass="sidebar-button" onAction="#handleDeals" fx:id="dealsButton"/>
            <Button text="Отчеты" styleClass="sidebar-button" onAction="#handleReports" fx:id="reportsButton"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane> 