<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" styleClass="login-container" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.RegisterController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Регистрация" styleClass="login-title"/>
    
    <TextField fx:id="usernameField" promptText="Имя пользователя" styleClass="login-field"/>
    <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="login-field"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Повторите пароль" styleClass="login-field"/>
    <TextField fx:id="emailField" promptText="Email" styleClass="login-field"/>
    <TextField fx:id="firstNameField" promptText="Имя" styleClass="login-field"/>
    <TextField fx:id="lastNameField" promptText="Фамилия" styleClass="login-field"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="registerButton" text="Зарегистрироваться" onAction="#handleRegister" styleClass="login-button"/>
        <Button fx:id="backButton" text="Назад к входу" onAction="#handleBack" styleClass="secondary-button"/>
    </HBox>
</VBox> 