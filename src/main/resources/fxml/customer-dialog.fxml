<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javacrm.controller.CustomerDialogController"
            styleClass="dialog-pane">
    
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Отчество:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="middleNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Семейное положение:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="maritalStatusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <Label text="Количество детей:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="childrenCountField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            
            <Label text="Телефон:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            
            <Label text="Паспорт:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <TextField fx:id="passportField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane> 