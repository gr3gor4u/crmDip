<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javacrm.controller.CustomerDialogController"
            styleClass="dialog-pane">
    
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Телефон:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Адрес:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextArea fx:id="addressArea" prefRowCount="3" wrapText="true" 
                     GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane> 