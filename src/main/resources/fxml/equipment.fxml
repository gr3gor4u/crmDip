<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.EquipmentController"
      stylesheets="@../styles/equipment.css"
      spacing="20">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Дополнительное оборудование" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Добавить оборудование" onAction="#handleAddEquipment"/>
        <Button text="Удалить выбранные" onAction="#handleMassDelete"/>
    </HBox>

    <!-- Форма для ввода данных -->
    <GridPane hgap="10" vgap="10">
        <Label text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Цена:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Количество:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Button text="Обновить" onAction="#handleUpdateEquipment" 
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <!-- Поиск -->
    <GridPane hgap="10" vgap="5">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="idFilterField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Название:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="nameFilterField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <Label text="Цена от:" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
        <TextField fx:id="minPriceFilterField" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
        <Label text="до:" GridPane.columnIndex="6" GridPane.rowIndex="0"/>
        <TextField fx:id="maxPriceFilterField" GridPane.columnIndex="7" GridPane.rowIndex="0"/>
        
        <Button text="Поиск" onAction="#handleSearch" GridPane.columnIndex="8" GridPane.rowIndex="0"/>
        <Button text="Очистить" onAction="#handleClearSearch" GridPane.columnIndex="9" GridPane.rowIndex="0"/>
    </GridPane>

    <TableView fx:id="equipmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="selectColumn" text="Выбрать" prefWidth="50"/>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Название" prefWidth="200"/>
            <TableColumn fx:id="priceColumn" text="Цена" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="Количество" prefWidth="100"/>
            <TableColumn fx:id="availableColumn" text="Доступно" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="150"/>
        </columns>
    </TableView>
</VBox> 