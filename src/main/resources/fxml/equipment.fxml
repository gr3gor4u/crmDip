<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.EquipmentController"
      spacing="20">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Дополнительное оборудование" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Добавить оборудование" onAction="#handleAddEquipment"/>
    </HBox>

    <TableView fx:id="equipmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Название" prefWidth="200"/>
            <TableColumn fx:id="descriptionColumn" text="Описание" prefWidth="300"/>
            <TableColumn fx:id="priceColumn" text="Цена" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="150"/>
        </columns>
    </TableView>
</VBox> 