<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.DealsController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Управление сделками" style="-fx-font-size: 20px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Добавить сделку" onAction="#handleAddDeal"/>
    </HBox>

    <!-- Форма поиска -->
    <GridPane hgap="10" vgap="5">
        <Label text="Клиент:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="searchCustomerField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Автомобиль:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="searchCarField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        
        <Label text="Статус:" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
        <TextField fx:id="searchStatusField" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
        
        <Button text="Поиск" onAction="#handleSearch" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <Button text="Очистить" onAction="#handleClearSearch" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
    </GridPane>

    <TableView fx:id="dealsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="customerColumn" text="Клиент" prefWidth="150"/>
            <TableColumn fx:id="carColumn" text="Автомобиль" prefWidth="150"/>
            <TableColumn fx:id="amountColumn" text="Сумма" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Дата" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="150"/>
        </columns>
    </TableView>
    
    <TitledPane text="Additional Equipment" expanded="true">
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="noEquipmentCheckBox" text="No Additional Equipment"/>
            </HBox>
            
            <TableView fx:id="equipmentTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="equipmentNameColumn" text="Equipment" prefWidth="200"/>
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </TitledPane>
    
</VBox> 