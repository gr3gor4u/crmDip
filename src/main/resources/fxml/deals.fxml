<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javacrm.controller.DealsController"
      spacing="20">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Управление сделками" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Новая сделка" onAction="#handleAddDeal"/>
    </HBox>

    <TableView fx:id="dealsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="customerColumn" text="Клиент" prefWidth="200"/>
            <TableColumn fx:id="carColumn" text="Автомобиль" prefWidth="200"/>
            <TableColumn fx:id="amountColumn" text="Сумма" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Дата" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="150"/>
        </columns>
    </TableView>
</VBox> 